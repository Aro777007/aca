#include <iostream>
using namespace std;
#include <string>

class animal
{
public:

	virtual void voice()
	{
		cout << "i am a anmial" << endl;
	}

	animal(){}
	
	animal(int y)
	{
		int a = 0;
		cout << "constuctor" << endl;
	}

    animal(const animal & obj)
	{
		cout << "copy constructor" << endl;
	}



	bool is_mammal = 1;
	bool is_wild = 1;
	string breed;
	int mid_weight = 0;
	int mid_height = 0;
	int speed = 0;
};

class aerial : public animal
{
public:
	bool is_flying = 1;
	bool is_swim = 0;

	
};



class aquatic : public animal
{
public:
	bool is_swim = 1;
	bool is_flying = 0;
	bool have_a_fin = 1;
};



class land : public animal
{
public:
	bool is_walk = 1;
	string colour;
	int legs = 4;
};



class eagle : public aerial
{
public:

    void voice()
	{
		cout << "i am a eagle" << endl;
	}

	void size()
	{
		mid_weight = 4, 5;
		mid_height = 1;
		is_mammal = 0;
		is_wild = 1;

		cout << "eagle is aerial animal, middle height--" << mid_height << "middle weight--" << mid_weight << endl;
		cout << "they are not mammal, they are wild;" << endl;
	}
};



class hawk : public aerial
{
public:

    void voice()
	{
		cout << "i am a hawk" << endl;
	}

	void size1()
	{
		mid_weight = 1;
		mid_height = 55;
		is_mammal = 0;
		is_wild = 1;

		cout << "hawk is aerial animal, middle height--" << mid_height << "middle weight--" << mid_weight << endl;
		cout << "they are not mammal, they are wild;" << endl;
	}
};



class shark : public aquatic
{
public:

     void voice()
	{
		cout << "i am a shark" << endl;
	}

	void size2()
	{
		mid_weight = 1200;
		mid_height = 2;
		is_wild = 1;
		speed = 19;

		cout << "shark is aquatic animal, middle height--" << mid_height << "middle weight--" << mid_weight << endl;
		cout << " they are wild;" << "their middle speed - " << speed << endl;
	}
};



class whale : public aquatic
{
public:

	 void voice()
	{
		cout << "i am a whale" << endl;
	}

	void size3()
	{
		mid_weight = 190000;
		mid_height = 5;
		is_mammal = 1;
		speed = 47;

		cout << "whale is aquatic animal, middle height--" << mid_height << "middle weight--" << mid_weight << endl;
		cout << " they are mammal;" << "their middle speed - " << speed << endl;
	}
};



class lion : public land
{
public:

	void voice()
	{
		cout << "i am a lion" << endl;
	}

	void size4()
	{
		mid_weight = 200;
		mid_height = 100;
		speed = 80;
		is_mammal = 1;

		cout << "Lion is land animal, middle height--" << mid_height << "middle weight--" << mid_weight << endl;
		cout << " they are wild;" << "their middle speed - " << speed << endl;
	}

};



class tiger : public land
{
public:

	void voice()
	{
		cout << "i am a tiger" << endl;
	}

	void size5()
	{
		mid_weight = 150;
		mid_height = 90;
		speed = 55;
		is_mammal = 1;

		cout << "tiger is land animal, middle height --" << mid_height << "middle weight --" << mid_weight << endl;
		cout << " they are mammal;" << "their middle speed - " << speed << endl;
	}
};


int main()
{
	animal obj(3);
	animal animalobj1(obj);
	animal a;

	
 
    animal* obj1 = new animal;
	eagle* obj2 = new eagle;
	hawk* obj3 = new hawk;
	shark* obj4 = new shark;
	whale* obj5 = new whale;
	lion* obj6 = new lion;
	tiger* obj7 = new tiger;

	obj1->voice();
	obj2->voice();
	obj3->voice();
	obj4->voice();
	obj5->voice();
	obj6->voice();
	obj7->voice();



	eagle eagle;
	eagle.size();

	hawk hawk;
	hawk.size1();

	shark shark;
	shark.size2();

	whale whale;
	whale.size3();

	lion lion;
	lion.size4();

	tiger tiger;
	tiger.size5();

	
	
	return 0;

}


