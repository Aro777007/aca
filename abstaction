
#include <iostream>
using namespace std;
#include <string>


class figure
{
public:
    virtual void move()
    {

    }
    string colour;
    string name;

};

class soldier : public figure
{
public:
    soldier()
    {
        colour = "black";
        name = "soldier";

        cout << "figure name is--" << name << "  " << "colour is--" << colour << endl;
    }

    void move() override
    {
        cout << "soldiers step" << endl;
    }

};

class king : public figure
{
public:
    king()
    {
        name = "king";
        colour = " black";

        cout << "figure name is--" << name << "  " << "colour is--" << colour << endl;

    }

    void move() override
    {
        cout << "kings step" << endl;
    }
};

class elephant : public figure
{
public:
    elephant()
    {
        name = "elephant";
        colour = "black";

        cout << "figure name is--" << name << "  " << "colour is--" << colour << endl;

    }

    void move() override
    {
        cout << "elephants step" << endl;
    }
};

class boat : public figure
{
public:
    boat()
    {
        name = "boat";
        colour = "black";

        cout << "figure name is--" << name << "  " << "colour is--" << colour << endl;

    }

    void move() override
    {
        cout << "boats step" << endl;
    }
};

class quenn : public figure
{
public:
    quenn()
    {
        name = "quenn";
        colour = "black";

        cout << "figure name is--" << name << "  " << "colour is--" << colour << endl;

    }

    void move() override
    {
        cout << "quenns step" << endl;
    }
};


class horse : public figure
{
public:
    void move() final
    {
        cout << "horses step" << endl;
    }

    horse()
    {
        name = "horse";
        colour = "black";

        cout << "figure name is--" << name << "  " << "colour is--" << colour << endl;
    }


};


int main()
{
    

    figure* obj1 = new soldier;
    figure* obj2 = new elephant;
    figure* obj3 = new king;
    figure* obj4 = new quenn;
    figure* obj5 = new boat;
    figure* obj6 = new horse;

    obj1->move();
    obj2->move();
    obj3->move();
    obj4->move();
    obj5->move();
    obj6->move();


    return 0;


}
