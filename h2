#include <iostream>
using namespace std;

class animal
{
private:
    const int height;

public:
    animal(int& h) : height(h) {}

    void f()
    {
        cout << height << endl;
    }
};

class mammal : public animal
{
private:
    const int legs;

public:
    mammal(int& h, int l) : animal(h), legs(l) {}

    void f1()
    {
        cout << legs << endl;
    }
};

class lion : public mammal
{
private:
    const int teeth;

public:
    lion(int& h, int l, int t) : mammal(h, l), teeth(t) {}

    void f2()
    {
        cout << teeth << endl;
    }
};

int main()
{
    int height = 300;
    int legs = 4;
    int teeth = 34;

    animal animalObj(height);
    animalObj.f();

    mammal mammalObj(height,legs);
    mammalObj.f1();

    lion lionObj(height, legs, teeth);
    lionObj.f2();
}
